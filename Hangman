import random
from hangman_extra import word_list

lives = 6

def check_answer(guess, answer, display):
    global lives
    for position in range(len(answer)):
        if guess == answer[position]:
            display[position] = guess
    if guess not in answer:
        lives -=1


def play_again():
    while True:
        choice = input("Do you want to play again?")
        if choice == "y":
            return True
        elif choice == "n":
            return False
        

def choose_word():
    word = random.choice(word_list)
    return word
    

def game():
    display = []
    answer = choose_word()

    print(f"Psst, answer is {answer}.")

    global lives

    for _ in answer:
        display += '_'

    game_on = True
    while game_on:
        print(f"The word is: {display}")
        print(f"You have {lives} lives remaining.")
        if lives == 0:
            print(f'Game over!')
            print(f'Your answer is: {display}')
            print(f'The word is: {answer}')
            game_on = False
        elif "_" not in display:
            print("You guessed all the letters. You won!")
            print(f'Your answer is: {display}')
            print(f'The word is: {answer}')
            game_on = False
        else:
            guess = input('Guess the word by choosing a letter: ').lower()
            check_answer(guess, answer, display)

    if play_again():
        lives = 6
        game()


game()