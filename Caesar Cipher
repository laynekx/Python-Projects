alphabet = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']


def caesar(message, shift_amount, direction):
    final_message = ""
    if direction == 'decode':
        shift_amount *=-1
    for char in message:
        if char not in alphabet:
            final_message += char
        else:
            position = alphabet.index(char)
            new_position = position + shift_amount
            final_message += alphabet[new_position]
    return final_message


on = True
while on:
    print("Welcome to Caesar Cipher.")
    text = input("What is your message?")
    instruction = input("Do you wish to encode or decode the message?").lower()
    shift = input("By how much do you want to shift the letters?")
    shift = int(shift) % 26

    print(caesar(text, shift, instruction))

    choice = input("Do you want to use the Ceasar Cipher again?")
    if choice == "n" or choice == "no":
        on = False