cards = [11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10]

import random

def deal_cards(cards_set):
    cards_set.append(random.choice(cards))

def calculate_score(cards_set):
    '''returns sum of cards or 0 if blackjack or changes ace from 11 to 1 as necessary'''
    if sum(cards_set) == 21 and len(cards_set) == 2:
        return 0
    elif sum(cards_set) > 21 and 11 in cards_set:
        cards_set.remove(11)
        cards_set.append(1)
    return sum(cards_set)

def win_lose(user, computer):
    '''prints winner (or tie) as well as returns True if winner/loser is declared, else False'''
    if user == 0:
        print("You win with a blackjack!")
        return False
    elif computer == 0:
        print("Computer wins with a blackjack!")
    elif computer > 21:
        print("Computer went over. You win!")
    elif user > 21:
        print("You went over. Computer wins!")
    elif user < 21:
        if computer > user:
            print("Computer wins!")
        else:
            print("You win!")
    elif user == computer:
            print("The game is tied!")


def option():
    '''checks correctness of response'''
    choice = input("Type 'y' to get another card, type 'n' to pass: ").lower()
    if choice == 'y':
        return 'y'
    elif choice == 'n':
        return 'n'

def blackjack():
    user_cards = []
    computer_cards = []

    for _ in range(2):
        deal_cards(user_cards)
        deal_cards(computer_cards)

    while sum(computer_cards) < 17:
        deal_cards(computer_cards)

    game_on = True
    while game_on:
        user_score = calculate_score(user_cards)
        computer_score = calculate_score(computer_cards)
        print(f"Your cards: {user_cards}, current score: {user_score}")
        print(f"Computer's first card: {computer_cards[0]}")
        if user_score == 0 or computer_score == 0 or user_score > 21 or computer_score > 21:
            game_on = False
        else:
            choice = option()
            if choice == "y":
                deal_cards(user_cards)
            else:
                game_on = False

    print(f"Your final hand: {user_cards}, score: {user_score}")
    print(f"Computer's final hand: {computer_cards}, score: {computer_score}")
    win_lose(user_score, computer_score)

while input('Do you want to play a game of blackjack?').lower() == "y":
    blackjack()